{
  "name": "txtdb",
  "version": "0.0.1",
  "author": "jmquigley <jmquigley@outlook.com>",
  "description": "Text file database (WIP)",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmquigley/txtdb"
  },
  "bugs": {
    "url": "https://github.com/jmquigley/txtdb/issues"
  },
  "engines": {
    "node": ">=7.4"
  },
  "bin": {
    "txtdb": "./cli.js"
  },
  "dependencies": {
    "expand-home-dir": "0.0.3",
    "fs-extra": "^2.0.0",
    "lodash": "^4.17.4",
    "log4js": "^1.1.0",
    "object-assign": "^4.1.1",
    "util.fixture": "0.0.14",
    "util.pkgwrap": "^0.0.5",
    "util.rstrip": "^0.0.6",
    "util.timestamp": "^0.0.12",
    "uuid": "^3.0.1",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "coveralls": "^2.11.15",
    "nyc": "^10.1.2",
    "xo": "^0.17.1"
  },
  "main": "index.js",
  "scripts": {
    "postinstall": "./node_modules/.bin/pkgwrap --postinstall",
    "test": "./node_modules/.bin/pkgwrap --testing",
    "report": "./node_modules/.bin/pkgwrap --reporting",
    "coverage": "./node_modules/.bin/pkgwrap --coverage"
  },
  "xo": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "global": [
      "window",
      "describe",
      "it",
      "JSON"
    ],
    "rules": {
      "space-before-function-paren": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2,
          "maxEOF": 1
        }
      ],
      "unicorn/filename-case": [
        "error",
        {
          "case": "snakeCase"
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  },
  "notesDBConfig": {
    "debug": true
  }
}
