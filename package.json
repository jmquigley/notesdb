{
  "name": "notesdb",
  "version": "0.0.1",
  "author": "jmquigley <jmquigley@outlook.com>",
  "description": "Text file database (WIP)",
  "private": true,
  "debug": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmquigley/notesdb"
  },
  "bugs": {
    "url": "https://github.com/jmquigley/notesdb/issues"
  },
  "engines": {
    "node": ">=7.4"
  },
  "bin": {
    "notesdb": "./cli.js"
  },
  "dependencies": {
    "@types/fs-extra": "0.0.37",
    "@types/lodash": "^4.14.52",
    "@types/log4js": "0.0.32",
    "@types/node": "^7.0.5",
    "@types/uuid": "^2.0.29",
    "expand-home-dir": "0.0.3",
    "fs-extra": "^2.0.0",
    "klaw-sync": "^1.1.0",
    "lodash": "^4.17.4",
    "log4js": "^1.1.0",
    "object-assign": "^4.1.1",
    "util.fixture": "0.0.27",
    "util.pkgwrap": "^0.0.6",
    "util.promise": "0.0.4",
    "util.rstrip": "^0.0.7",
    "util.timestamp": "^0.0.13",
    "uuid": "^3.0.1",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "coveralls": "^2.11.15",
    "nyc": "^10.1.2",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6",
    "xo": "^0.17.1"
  },
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "./node_modules/.bin/pkgwrap --build",
    "postinstall": "./node_modules/.bin/pkgwrap --postinstall",
    "test": "./node_modules/.bin/pkgwrap --testing",
    "report": "./node_modules/.bin/pkgwrap --reporting",
    "coverage": "./node_modules/.bin/pkgwrap --coverage"
  },
  "xo": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "global": [
      "window",
      "JSON"
    ],
    "rules": {
      "space-before-function-paren": "off",
      "unicorn/filename-case": [
        "error",
        {
          "case": "snakeCase"
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  },
  "ava": {
    "concurrency": 5
  }
}
